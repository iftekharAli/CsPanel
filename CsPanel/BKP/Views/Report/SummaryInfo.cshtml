                    </tr>
                }
                else
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.ServiceName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Romana)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.rawshon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
